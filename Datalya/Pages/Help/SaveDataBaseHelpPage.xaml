<Page x:Class="Datalya.Pages.Help.SaveDataBaseHelpPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Datalya.Pages.Help"
	  xmlns:lang="clr-namespace:Datalya.Properties"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SaveDataBaseHelpPage" d:Background="#fff" FontFamily="..\..\Fonts\#Montserrat"
      Foreground="{Binding Source={StaticResource Foreground1}}">

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition/>
		</Grid.RowDefinitions>

		<TextBlock Text="{x:Static lang:Resources.SaveDataBase}" Grid.Row="0" FontWeight="Bold" FontSize="16" Margin="10"/>
		<TextBlock Text="{x:Static lang:Resources.HelpSaveDataBase}" Grid.Row="1" FontSize="13" Margin="10" TextWrapping="Wrap"/>
	</Grid>
</Page>
